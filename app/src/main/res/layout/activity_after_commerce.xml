<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srajan.edumantra.AfterCommerce"
    android:background="#59c4be">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aftertencom"
                android:id="@+id/imgaftertensci"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintVertical_bias="0.39"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aftertwalecom"
                android:layout_toRightOf="@id/imgaftertensci"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintVertical_bias="0.39"
                app:layout_constraintLeft_toRightOf="@+id/imgaftertensci"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="375dp"
                android:layout_height="344dp"
                android:layout_below="@id/imgaftertensci"
                android:src="@drawable/traceforar"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.642"
                android:id="@+id/imageView2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteY="195dp"
                tools:layout_editor_absoluteX="5dp" />

            <ImageView
                android:layout_width="364dp"
                android:layout_height="483dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/imgd"
                android:scaleType="fitCenter"

                app:layout_constraintVertical_bias="0.285" />

            <!--<ImageView-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="200dp"-->
                <!--android:id="@+id/imgd"-->
                <!--android:scaleType="fitXY"-->
                <!--tools:layout_editor_absoluteY="8dp"-->
                <!--tools:layout_editor_absoluteX="8dp" />-->

        </android.support.constraint.ConstraintLayout>
    </ScrollView>



</RelativeLayout>
